{
   "compilerOptions": {
      "target": "esnext",
      "baseUrl": "./",
      "rootDir": ".",
      "module": "esnext",
      "moduleResolution": "bundler",
      "paths": {
         "@/*": ["src/*"],
         "@@/*": ["./*"]
      },
      "strict": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
   },
   "include": ["src/**/*.ts", "src/**/*.d.ts", "playground/**/*.ts"]
}
